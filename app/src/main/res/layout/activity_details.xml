<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAD744"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp">

        <ImageView
            android:id="@+id/ivBackCP"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:rotation="180"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="monospace"
            android:text="Preview"
            android:textAlignment="center"
            android:textColor="#EE5455"
            android:textSize="29sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CAC7D7"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:backgroundTint="#04030C"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="399dp"
                            android:layout_margin="9dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:id="@+id/ivPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_launcher_background" />

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:id="@+id/cvFront"
                                app:cardCornerRadius="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="4.5dp"
                                android:layout_marginBottom="9dp"
                                android:backgroundTint="#8BD8BD"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Front"
                                    android:textAlignment="center"
                                    android:textSize="29sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/cvBack"
                                app:cardCornerRadius="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4.5dp"
                                android:layout_marginRight="9dp"
                                android:layout_marginBottom="9dp"
                                android:backgroundTint="#8BD8BD"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:textStyle="bold"
                                    android:text="Back"
                                    android:textSize="29sp"
                                    android:textColor="#2b3252"
                                    android:textAlignment="center" />

                            </android.support.v7.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="9dp"
                    android:backgroundTint="#04030C"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_margin="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="4.5dp"
                                android:layout_weight="2"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Brand"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginLeft="4.5dp"
                                android:layout_weight="1"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvPreview1"
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="AGLXY"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="4.5dp"
                                android:layout_weight="2"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Name"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginLeft="4.5dp"
                                android:layout_weight="1"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvPreview2"
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Macbook Pro"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="4.5dp"
                                android:layout_weight="2"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Type"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginLeft="4.5dp"
                                android:layout_weight="1"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvPreview3"
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Hoodie"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="4.5dp"
                                android:layout_weight="2"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Color"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginLeft="4.5dp"
                                android:layout_weight="1"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvPreview4"
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Black"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="4.5dp"
                                android:layout_weight="2"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="Price"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:layout_marginLeft="4.5dp"
                                android:layout_weight="1"
                                android:backgroundTint="#8BD8BD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvPreview5"
                                    android:layout_margin="9dp"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:text="IDR 550.000"
                                    android:textAlignment="viewStart"
                                    android:textSize="19sp"
                                    android:textColor="#2b3252"
                                    android:textStyle="bold" />

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="9dp"
                    android:backgroundTint="#04030C"
                    app:cardCornerRadius="10dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvBuyNow"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="9dp"
                        android:layout_weight="1"
                        android:backgroundTint="#2b3252"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="Buy Now"
                            android:textAlignment="center"
                            android:textSize="29sp"
                            android:textColor="#8BD8BD"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>